{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "jsx": "preserve",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es2020"
    ],
    "allowJs": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/core/*": [
        "./src/core/*"
      ],
      "~/lib/*": [
        "./src/lib/*"
      ],
      "~/components/*": [
        "./src/components/*"
      ],
      "~/configuration": [
        "./src/configuration.ts"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "@types/global.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "ts-node": {
    "files": true
  }
}